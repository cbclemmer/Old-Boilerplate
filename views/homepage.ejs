<div class="container" id="err" style="color: white; padding: 20px;position: absolute; top:10px;background: red;margin-left: 20%;opacity: .9;text-align: center;font-size: 20px;">
</div>
<div ng-app="app" ng-controller="userController as use">
	<div>
		<div id="topNav" class="container">
			<div>App</div>
			<div class="loggedIn">{{user.name}}</div>
			<div ng-click="use.logOut()" class="loggedIn">Logout</div>
		</div>
	</div>
	
	
	<div class="login container" id="startLog">
		<div>
			<h2>Login</h2>
			<!-- login form -->
			<form ng-controller="userController as userCtrl" ng-submit="userCtrl.login()">
				<input type="email" ng-model="userCtrl.tLogin.email" placeholder="email" /><br>
				<input type="password" ng-model="userCtrl.tLogin.password" placeholder="password" /><br>
				<input type="submit" value="submit" />
			</form>
		</div>
		<div>
			<!-- signup form -->
			<h2>Sign up</h2>
			<form ng-controller="userController as userCtrl" ng-submit="userCtrl.signUp()">
				<input type="text" ng-model="userCtrl.temp.name" placeholder="name/username" /><br>
				<input type="email" ng-model="userCtrl.temp.email" placeholder="email" /><br>
				<input type="password" ng-model="userCtrl.temp.password" placeholder="password" /><br>
				<input type="password" ng-model="userCtrl.temp.cPassword" placeholder="confirm password" /><br>
				<input type="submit" value="submit" />
			</form>
		</div>
	</div>
</div>
